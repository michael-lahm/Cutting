        <TextBox HorizontalAlignment="Center" Margin="0,108,0,0" TextWrapping="Wrap" Text="13 18 22 30" VerticalAlignment="Top" Width="330" TextChanged="TextBox_TextChanged" Name="TextBox1"/>
        <TextBlock Margin="10,87,90,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16"><Run Text="Введите временные отрезки (через пробел):"/><LineBreak/><Run/></TextBlock>

    </Grid>
