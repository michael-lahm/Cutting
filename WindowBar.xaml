<Window x:Class="Cutting.WindowBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cutting"
        mc:Ignorable="d"
        Title="Нарезка" Height="126" Width="300" ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
    <Grid Margin="20,10,20,10">
        <ProgressBar Minimum="0" Maximum="100" Name="pbStatus" Margin="0,5,0,45" IsEnabled="False" IsIndeterminate="True" />
        <Button Content="Отменить" HorizontalAlignment="Left" Height="20" Margin="165,45,0,0" VerticalAlignment="Top" Width="77" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="19" Margin="10,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Name="TextBar"/>
    </Grid>
</Window>
